@model Domain.DTO.TicketDto
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="movie">Movie</label>
            <select class="form-control" id="movie" name="selectedmovie">
                @foreach (var item in Model.MovieOptions)
                {
                    <option value="@item.Id" selected="@item.Id.Equals(Model.SelectedMovie)">@item.Title</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="seat">Seat</label>
            <input type="number" min="1" max="200" class="form-control" id="seat" name="seat" placeholder="Seat"
                   value="@Model.Seat">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" min="1"  class="form-control" id="price" name="price" placeholder="Price"
                   value="@Model.Price">
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="datetime-local" class="form-control" id="date" name="date" placeholder="Date"
                   value="@Model.Date">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
